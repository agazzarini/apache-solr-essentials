			<plugin>
				<groupId>org.codehaus.cargo</groupId>
				<artifactId>cargo-maven2-plugin</artifactId>
				<version>1.4.9</version>
				<configuration>
					<container>
						<systemProperties>
							<cargo.servlet.port>8983</cargo.servlet.port>
							<solr.solr.home>${basedir}/src/solr/solr-home</solr.solr.home>
							<solr.data.dir>${project.build.directory}/solr</solr.data.dir>
							<log4j.configuration>file://${basedir}/src/test/resources/log4j.xml</log4j.configuration>
							<project.lib.dir>${basedir}/target</project.lib.dir>
						</systemProperties>
						<containerId>jetty8x</containerId>
						<type>embedded</type>
						<dependencies>
							<dependency>
								<groupId>log4j</groupId>
								<artifactId>log4j</artifactId>
							</dependency>
							<dependency>
